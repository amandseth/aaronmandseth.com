---
import { generateSrcset } from "../utils/image_sizes";

import ahsLogoImage from "../images/ahs.png";
const ahsLogoImageSrcset = await generateSrcset(
	ahsLogoImage,
	[198, 396, 594, 792]
);

import codeImage from "../images/code.png";
const codeImageSrcset = await generateSrcset(
	codeImage,
	[500, 750, 1000, 1500, 2000]
);

import appImage from "../images/application.png";
const appImageSrcset = await generateSrcset(
	appImage,
	[250, 375, 500, 750, 1000]
);
---

<section
	id="work"
	class="my-16 grid gap-8 pt-4 text-lg md:my-40 md:grid-cols-2 lg:gap-16"
>
	<div class="mt-4">
		<div>
			<h1 class="my-4 text-3xl">Work</h1>
			<p>
				I am currently working at Alberta Health Services, where I build
				solutions that assist healthcare workers in delivering quality
				patient care.
			</p>
			<div class="max-w-[40%]">
				<a href="https://albertahealthservices.ca" target="_blank">
					<img
						srcset={ahsLogoImageSrcset}
						sizes="(min-width: 768px) 20vw, 50vw"
						alt="Alberta Health Services logo"
						class="lazy mt-8"
						loading="lazy"
						decoding="async"
					/>
				</a>
			</div>
		</div>
	</div>
	<div class="relative mt-4">
		<img
			srcset={codeImageSrcset}
			sizes="(min-width: 768px) 35vw, 90vw"
			alt="Image showing source code in a text editor"
			class="lazy w-full shadow-lg"
			loading="lazy"
			decoding="async"
		/>
		<div
			class="absolute top-0 w-full origin-bottom-right translate-x-4 translate-y-4 scale-50"
		>
			<img
				srcset={appImageSrcset}
				sizes="(min-width: 768px) 20vw, 45vw"
				alt="Image showing a simple web application"
				class="lazy w-full shadow-lg"
				loading="lazy"
				decoding="async"
			/>
		</div>
	</div>
</section>
